<h1><%= @profile.name %></h1>
<p><%= @profile.bio %></p>
<h2>Education</h2>

	<% @profile.educations.each do |education| %>
		<ul>
			<li>School: <%= education.school %></li>
			<li>Degree: <%= education.degree %></li>
			<li>Major/Specialization: <%= education.specialization %></li>
		</ul>
	<% end %>

<h2>Subjects</h2>
	
	<% @profile.subjects.each do |subject| %>
		<ul>
			<li><%= subject.name %></li>
			<li><%= subject.level %></li>
		</ul>
	<% end %>

<%= link_to "Back", profiles_path %>